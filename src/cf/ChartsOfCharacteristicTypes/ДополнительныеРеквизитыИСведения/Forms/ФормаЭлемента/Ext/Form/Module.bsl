			Заголовок = Строка(Объект.Заголовок) + " " + НСтр("ru = '(Метка)'");
		Иначе
			Заголовок = Строка(Объект.Заголовок) + " " + НСтр("ru = '(Дополнительный реквизит)'");
		КонецЕсли;
	Иначе
		Если Объект.ВидСвойств = Перечисления.ВидыСвойств.ДополнительныеСведения
			Или Объект.ЭтоДополнительноеСведение Тогда
			Заголовок = НСтр("ru = 'Дополнительное сведение (создание)'");
		ИначеЕсли Объект.ВидСвойств = Перечисления.ВидыСвойств.Метки Тогда
			Заголовок = НСтр("ru = 'Метка (создание)'");
		Иначе
			Заголовок = НСтр("ru = 'Дополнительный реквизит (создание)'");
		КонецЕсли;
	КонецЕсли;
	
