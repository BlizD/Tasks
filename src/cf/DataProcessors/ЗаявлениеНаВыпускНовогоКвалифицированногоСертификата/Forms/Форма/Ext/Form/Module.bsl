			+ " (" + НСтр("ru = 'Заявление на новый сертификат'") + ")";
		// Организация.
		ОбновитьЗначение(Содержание, "ЭтоИндивидуальныйПредприниматель");
		ОбновитьЗначение(Содержание, "Организация");
