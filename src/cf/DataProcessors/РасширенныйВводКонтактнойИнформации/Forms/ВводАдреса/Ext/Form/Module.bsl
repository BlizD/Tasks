	Если НайденныеСтроки[0].Тип = "Помещение" Тогда
		Значение = ?(НайденныеСтроки[0].Значение <> НСтр("ru='Другое'"), НайденныеСтроки[0].Значение, "");
		НаселенныйПунктДетально.Apartments.Добавить(ЗначениеСтроенияИлиПомещения(Значение, ЭтотОбъект[ИмяТекущего]));
	Иначе
		НаселенныйПунктДетально.Buildings.Добавить(ЗначениеСтроенияИлиПомещения(НайденныеСтроки[0].Значение, ЭтотОбъект[ИмяТекущего]));
	КонецЕсли;
	
	ОбновитьМенюДобавленияСтроенийИПомещений();
	
КонецПроцедуры

