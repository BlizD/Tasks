			Иначе
				НаименованиеУровня = ОбъектАдреса[ИмяПоля];
			КонецЕсли;
			
			ЭтоУровеньРегиона = СтрСравнить(ИмяПоля, "area") = 0;
			
			Если ЭтоУровеньРегиона И ЗначениеЗаполнено(ОбъектАдреса.areaValue) Тогда
				ПредставлениеУровня = ОбъектАдреса.areaValue;
