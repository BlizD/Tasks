Процедура ПрочитатьНастройкиПодключенияИзXMLВСтруктуру(СтруктураНастроек, ИмяФайлаСтрокаXML, ЭтоФайл)
	
	СтруктураНастроек = Новый Структура;
	
	ЧтениеXML = Новый ЧтениеXML;
	Если ЭтоФайл Тогда
		ЧтениеXML.ОткрытьФайл(ИмяФайлаСтрокаXML);
	Иначе
		ЧтениеXML.УстановитьСтроку(ИмяФайлаСтрокаXML);
	КонецЕсли;
	
	Пока ЧтениеXML.Прочитать() Цикл
		
		Если ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента 
			И ЧтениеXML.Имя = "ПараметрыНастройки" Тогда // @Non-NLS
			
			ВерсияФормата = ЧтениеXML.ПолучитьАтрибут("ВерсияФормата"); // @Non-NLS
			СтруктураНастроек.Вставить("ВерсияФорматаФайлаНастроекОбменаДанными",
				?(ВерсияФормата = Неопределено, "1.0", ВерсияФормата));
			
		ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента 
			И ЧтениеXML.Имя = "ОсновныеПараметрыОбмена" Тогда // @Non-NLS
			
			СчитатьДанныеВСтруктуру(СтруктураНастроек, ЧтениеXML);
			
		ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента 
			И ЧтениеXML.Имя = "УчетнаяЗаписьЭлектроннойПочты" Тогда // @Non-NLS
			
			Если СтруктураНастроек.Свойство("ИспользоватьПараметрыТранспортаEMAIL")
				И СтруктураНастроек.ИспользоватьПараметрыТранспортаEMAIL Тогда
				
				Если ОбщегоНазначения.ПодсистемаСуществует("СтандартныеПодсистемы.РаботаСПочтовымиСообщениями") Тогда
					
					// Зачитываем узел УчетнаяЗаписьЭлектроннойПочты.
					ЧтениеXML.Прочитать(); // УчетнаяЗаписьЭлектроннойПочты {НачалоЭлемента}
					
					СчитатьДанныеЭлектроннойПочты(СтруктураНастроек, ЧтениеXML);
					
					ЧтениеXML.Прочитать(); // УчетнаяЗаписьЭлектроннойПочты {КонецЭлемента}
					
				Иначе
					
					ЧтениеXML.Пропустить();
					
				КонецЕсли;
				
			КонецЕсли;
			
		ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента 
			И ЧтениеXML.Имя = "ПараметрыОбменаXDTO" Тогда // @Non-NLS
			
			СчитатьПараметрыОбменаXDTO(СтруктураНастроек, ЧтениеXML);
			
		КонецЕсли;
		
	КонецЦикла;
	
	ЧтениеXML.Закрыть();
	
КонецПроцедуры

Процедура СчитатьДанныеВСтруктуру(СтруктураНастроек, ЧтениеXML)
	
	Если ЧтениеXML.ТипУзла <> ТипУзлаXML.НачалоЭлемента Тогда
		ВызватьИсключение НСтр("ru = 'Ошибка разбора XML.'");
	КонецЕсли;
	
	ЧтениеXML.Прочитать();
	
	Пока ЧтениеXML.ТипУзла <> ТипУзлаXML.КонецЭлемента Цикл
				
		ИмяУзла = ОбменДаннымиТрансляцияФорматаПовтИсп.ТранслироватьИмя(ЧтениеXML.Имя, "en"); 
		
		Если ИмяУзла = "ВидТранспортаСообщенийОбмена"
			И Метаданные.ВариантВстроенногоЯзыка = Метаданные.СвойстваОбъектов.ВариантВстроенногоЯзыка.Английский Тогда
			ПрочитатьНастройкуВидаТранспортаДляАнглийскойВерсии(СтруктураНастроек, ЧтениеXML)
		Иначе
			СтруктураНастроек.Вставить(ИмяУзла, ПрочитатьXML(ЧтениеXML));
		КонецЕсли;
		
	КонецЦикла;
		
	ЧтениеXML.Прочитать();
	
КонецПроцедуры

Процедура ПрочитатьНастройкуВидаТранспортаДляАнглийскойВерсии(СтруктураНастроек, ЧтениеXML)
	
	СоответствиеВидовТранспорта = Новый Соответствие;
	СоответствиеВидовТранспорта.Вставить("EMAIL", ПредопределенноеЗначение("Перечисление.ВидыТранспортаСообщенийОбмена.EMAIL")); // @Non-NLS-1
	СоответствиеВидовТранспорта.Вставить("FILE", ПредопределенноеЗначение("Перечисление.ВидыТранспортаСообщенийОбмена.FILE")); // @Non-NLS-1
	СоответствиеВидовТранспорта.Вставить("FTP", ПредопределенноеЗначение("Перечисление.ВидыТранспортаСообщенийОбмена.FTP")); // @Non-NLS-1
	СоответствиеВидовТранспорта.Вставить("WS", ПредопределенноеЗначение("Перечисление.ВидыТранспортаСообщенийОбмена.WS")); // @Non-NLS-1
	СоответствиеВидовТранспорта.Вставить("COM", ПредопределенноеЗначение("Перечисление.ВидыТранспортаСообщенийОбмена.COM")); // @Non-NLS-1
	СоответствиеВидовТранспорта.Вставить("WSПассивныйРежим", ПредопределенноеЗначение("Перечисление.ВидыТранспортаСообщенийОбмена.WSПассивныйРежим")); // @Non-NLS-1
	СоответствиеВидовТранспорта.Вставить("ВнешняяСистема", ПредопределенноеЗначение("Перечисление.ВидыТранспортаСообщенийОбмена.ВнешняяСистема")); // @Non-NLS-1
	
	ЧтениеXML.Прочитать();
			
	Пока ЧтениеXML.ТипУзла <> ТипУзлаXML.НачалоЭлемента Цикл
		
		Если ЧтениеXML.ТипУзла = ТипУзлаXML.Текст Тогда
			
			ВидТранспортаНастройка = ЧтениеXML.Значение;
			
			ВидТранспорта = СоответствиеВидовТранспорта.Получить(ВидТранспортаНастройка);
			
			Если ВидТранспорта <> Неопределено Тогда
				СтруктураНастроек.Вставить("ВидТранспортаСообщенийОбмена", ВидТранспорта);
			КонецЕсли;
				
		КонецЕсли;
		
		ЧтениеXML.Прочитать();
		
	КонецЦикла;
	
КонецПроцедуры

Процедура СчитатьДанныеЭлектроннойПочты(СтруктураНастроек, ЧтениеXML)
	
	СтруктураУчетнойЗаписиЭлектроннойПочты = Новый Структура;
	
	СтандартныеРеквизиты = Новый Структура;
	СтандартныеРеквизиты.Вставить("Description","Наименование");
	СтандартныеРеквизиты.Вставить("PredefinedDataName","ИмяПредопределенныхДанных");
	
	Пока Истина Цикл
		
		Ключ = "";
		Значение = "";
		
		Пока ЧтениеXML.Прочитать() Цикл
			
			Если ЧтениеXML.ТипУзла = ТипУзлаXML.НачалоЭлемента Тогда
				
				Ключ = ЧтениеXML.Имя;
				
				Если СтандартныеРеквизиты.Свойство(Ключ) Тогда
					Ключ = СтандартныеРеквизиты[Ключ];
				КонецЕсли;
				
			ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.Текст Тогда
				
				Значение = ЧтениеXML.Значение;
				
			ИначеЕсли ЧтениеXML.ТипУзла = ТипУзлаXML.КонецЭлемента Тогда
				
				Прервать;
				
			КонецЕсли;
			
		КонецЦикла;
		
		Если ЧтениеXML.Имя = "CatalogObject.УчетныеЗаписиЭлектроннойПочты" И ЧтениеXML.ТипУзла = ТипУзлаXML.КонецЭлемента Тогда
			Прервать;
		КонецЕсли;
					
		СтруктураУчетнойЗаписиЭлектроннойПочты.Вставить(Ключ, Значение);
			
	КонецЦикла;
	
	ИмяСправочника = "УчетныеЗаписиЭлектроннойПочты";
	Менеджер = ОбщегоНазначения.МенеджерОбъектаПоПолномуИмени("Справочник." + ИмяСправочника);
	УчетнаяЗаписьЭлектроннойПочты = Менеджер.СоздатьЭлемент();
	УчетнаяЗаписьЭлектроннойПочты.Наименование = СтруктураУчетнойЗаписиЭлектроннойПочты.Наименование;
	Если СтруктураУчетнойЗаписиЭлектроннойПочты.Свойство("ИмяПредопределенныхДанных") Тогда
		УчетнаяЗаписьЭлектроннойПочты.ИмяПредопределенныхДанных = СтруктураУчетнойЗаписиЭлектроннойПочты.ИмяПредопределенныхДанных;
	КонецЕсли;
	
	Для Каждого Реквизит Из Метаданные.Справочники[ИмяСправочника].Реквизиты Цикл
		
		Если Не СтруктураУчетнойЗаписиЭлектроннойПочты.Свойство(Реквизит.Имя) Тогда
			Продолжить;
		КонецЕсли;
		
		УчетнаяЗаписьЭлектроннойПочты[Реквизит.Имя] = СтруктураУчетнойЗаписиЭлектроннойПочты[Реквизит.Имя];
		
	КонецЦикла;
		
	СтруктураНастроек.Вставить("УчетнаяЗаписьЭлектроннойПочты", УчетнаяЗаписьЭлектроннойПочты);
	
КонецПроцедуры

Процедура СчитатьПараметрыОбменаXDTO(СтруктураНастроек, ЧтениеXML)
	
	ПараметрыОбменаXDTO = Новый Структура;
	
	ЧтениеXML.Прочитать();
	
	Пока ЧтениеXML.ТипУзла <> ТипУзлаXML.КонецЭлемента Цикл
		
		Ключ = ЧтениеXML.Имя;
		ПараметрыОбменаXDTO.Вставить(Ключ, ПрочитатьXML(ЧтениеXML));
		
	КонецЦикла;
	
	СтруктураНастроек.Вставить("ПараметрыОбменаXDTO", ПараметрыОбменаXDTO);
	
КонецПроцедуры

Функция НастройкиXDTOКорреспондентаИзXML(ИмяФайлаСтрокаXML, ЭтоФайл, УзелОбмена) Экспорт
	
	ЧтениеXML = Новый ЧтениеXML;
	Если ЭтоФайл Тогда
		ЧтениеXML.ОткрытьФайл(ИмяФайлаСтрокаXML);
	Иначе
		ЧтениеXML.УстановитьСтроку(ИмяФайлаСтрокаXML);
	КонецЕсли;
	
	ЧтениеXML.Прочитать(); // Message
	ЧтениеXML.Прочитать(); // Header
	
	ЗаголовокСообщенияXDTO = ФабрикаXDTO.ПрочитатьXML(ЧтениеXML,
		ФабрикаXDTO.Тип("http://www.1c.ru/SSL/Exchange/Message", ЧтениеXML.ЛокальноеИмя));
		
	СтруктураНастроек = ОбменДаннымиXDTOСервер.СтруктураНастроекXDTO();
	ОбменДаннымиXDTOСервер.ЗаполнитьСтруктуруНастроекXDTOКорреспондента(СтруктураНастроек, ЗаголовокСообщенияXDTO, , УзелОбмена);
	
	// Проверка UID отправителя на соответствие формату.
	УИД = ЗаголовокСообщенияXDTO.Confirmation.From;
	Попытка
		УИД = Новый УникальныйИдентификатор(УИД);
	Исключение
		ВызватьИсключение СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Идентификатор отправителя <%1> в файле с настройками EnterpriseData не соответствует ожидаемому формату GUID.'"),
			УИД);
	КонецПопытки;
	
	СтруктураНастроек.Вставить("ИдентификаторОтправителя", ЗаголовокСообщенияXDTO.Confirmation.From);
		
	ЧтениеXML.Закрыть();
	
	Возврат СтруктураНастроек;
	
