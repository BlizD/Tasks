Функция Подключаемый_СтраницаПроверкаПодключения_ДлительнаяОперация(Отказ, ПерейтиДалее)
	
	ПерейтиДалее = Ложь;
	
	Если ВидПодключения = "ПассивныйРежим" Тогда
		
		ПерейтиДалее = Истина;
		
	ИначеЕсли ВидПодключения = "ВнешнееСоединение"
		Или ВидПодключения = "Интернет" Тогда
		
		Если ВидПодключения = "ВнешнееСоединение"
			И ОбщегоНазначенияКлиент.ИнформационнаяБазаФайловая() Тогда
			Оповещение = Новый ОписаниеОповещения("ЗарегистрироватьCOMСоединительЗавершение", ЭтотОбъект);
			
			СтруктураПодключения = Новый Структура;
			СтруктураПодключения.Вставить("COMВариантРаботыИнформационнойБазы",ВнешнееСоединениеВариантРаботыИнформационнойБазы);
			СтруктураПодключения.Вставить("COMКаталогИнформационнойБазы", ВнешнееСоединениеКаталогИнформационнойБазы);
			СтруктураПодключения.Вставить("COMИмяСервера1СПредприятия", ВнешнееСоединениеКластерСерверов);
			СтруктураПодключения.Вставить("COMИмяИнформационнойБазыНаСервере1СПредприятия",ВнешнееСоединениеИмяИнформационнойБазы);
			СтруктураПодключения.Вставить("COMАутентификацияОперационнойСистемы", ВнешнееСоединениеВидАутентификации);
			СтруктураПодключения.Вставить("COMИмяПользователя", ВнешнееСоединениеИмяПользователя);
			СтруктураПодключения.Вставить("COMПарольПользователя", ВнешнееСоединениеПароль);
			
			ОбменДаннымиКлиент.ПроверитьИЗарегистрироватьCOMСоединитель(СтруктураПодключения, Оповещение);

		Иначе
			ПриНачалеПроверкиПодключенияOnline();
		КонецЕсли;
		
	ИначеЕсли МодельСервиса Тогда
		
		ПриНачалеПроверкиПодключенияВМоделиСервиса();
		
	ИначеЕсли ВидПодключения = "ОбычныеКаналыСвязи" Тогда
		
		ПриНачалеПроверкиПодключенияOffline();
		
	КонецЕсли;
	
	Возврат Неопределено;
	
КонецФункции

