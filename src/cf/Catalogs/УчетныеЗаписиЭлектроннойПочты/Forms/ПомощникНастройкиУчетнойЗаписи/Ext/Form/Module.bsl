			НСтр("ru = 'Введите %1'"), Элемент.Заголовок);
			
		ОбщегоНазначенияКлиент.СообщитьПользователю(
			ТекстСообщения, , ИмяРеквизита, , Отказ);
	КонецЕсли;
	
