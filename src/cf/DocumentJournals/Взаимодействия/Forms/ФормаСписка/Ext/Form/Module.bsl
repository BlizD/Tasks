		Иначе
			ТекстНайдено = НСтр("ru = 'Найдено в'");
		КонецЕсли;
		
		ОписаниеНайденоПП = ТекстНайдено + " - " + СтрокаТаблицыСОписанием.Описание;
	КонецЕсли;

