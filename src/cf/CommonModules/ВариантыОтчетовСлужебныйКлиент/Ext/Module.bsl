Процедура СкрытьГруппировку(Настройки, Группировка, Настройки2, Группировка2, Поле)
	
	Поля = Группировка2.ПоляГруппировки;
	
	КоличествоИспользуемыхПолей = 0;
	
	Для Каждого Элемент Из Поля.Элементы Цикл 
		
		Если Элемент.Использование Тогда 
			КоличествоИспользуемыхПолей = КоличествоИспользуемыхПолей + 1;
		КонецЕсли;
		
	КонецЦикла;
	
	Если КоличествоИспользуемыхПолей > 0 Тогда 
		Возврат;
	КонецЕсли;
	
	Группировка.Использование = Ложь;
	Группировка2.Использование = Ложь;
	РодительскаяГруппировка = Группировка.Родитель;
	РодительскаяГруппировка2 = Группировка2.Родитель;
	
	Если ТипЗнч(РодительскаяГруппировка2) = Тип("ТаблицаКомпоновкиДанных") Тогда 
		
		ИдентификаторГруппировки2 = Настройки2.ПолучитьИдентификаторПоОбъекту(Группировка2);
		
		Если СтрНайти(ИдентификаторГруппировки2, "/row/") > 0 Тогда 
			Группировки = РодительскаяГруппировка.Строки;
			Группировки2 = РодительскаяГруппировка2.Строки;
		Иначе
			Группировки2 = РодительскаяГруппировка2.Колонки;
		КонецЕсли;
		
	Иначе
		Группировки = РодительскаяГруппировка.Структура;
		Группировки2 = РодительскаяГруппировка2.Структура;
	КонецЕсли;
	
	ИндексГруппировки = Группировки.Индекс(Группировка);
	ИндексГруппировки2 = Группировки2.Индекс(Группировка2);
	
	Для НомерДочернейГруппировки = 1 По Группировка2.Структура.Количество() Цикл
		ДочерняяГруппировка  = Группировка.Структура[НомерДочернейГруппировки - 1];
		ДочерняяГруппировка2 = Группировка2.Структура[НомерДочернейГруппировки - 1];
		
		Если Не ДочерняяГруппировка2.Использование Тогда 
			Продолжить;
		КонецЕсли;
		
		ОтчетыКлиентСервер.СкопироватьРекурсивно(Настройки, ДочерняяГруппировка, Группировки, ИндексГруппировки);
		ОтчетыКлиентСервер.СкопироватьРекурсивно(Настройки2, ДочерняяГруппировка2, Группировки2, ИндексГруппировки2);
		
		ДочерняяГруппировка.Использование = Ложь;
		ДочерняяГруппировка2.Использование = Ложь;
		
	КонецЦикла;
	
КонецПроцедуры

