Процедура ДобавитьНастройкиВСтек(Форма, Настройки, Действие, ТекущееПоле = Неопределено) Экспорт 
	
	СтекНастроек = СтекНастроекОтчета(Форма);
	
	Если СтекНастроек = Неопределено Тогда 
		Возврат;
	КонецЕсли;
	
	УдалитьРазрывСтекаНастроек(СтекНастроек);
	СброситьПометкиСтекаНастроек(СтекНастроек);
	
	Запись = СтекНастроек.Добавить();
	Запись.Порядок = СтекНастроек.Количество();
	Запись.Пометка = Истина;
	Запись.Настройки = Настройки;
	Запись.Действие = Действие;
	Запись.ПредставлениеДействия = ПредставлениеДействияСтекаНастроек(Форма, Запись, ТекущееПоле);
	
	УдалитьИзбыточныеЗаписиСтекаНастроек(СтекНастроек);
	
КонецПроцедуры

// Параметры:
//  Форма - ФормаКлиентскогоПриложения
//  ЗаписьСтекаНастроек - ДанныеФормыЭлементКоллекции:
//    * Действие - Строка
//    * Настройки - НастройкиКомпоновкиДанных
//    * Пометка - Булево
//    * Порядок - Число
//    * ПредставлениеДействия - Строка
//  ТекущееПоле - Неопределено
//              - Строка
// 
// Возвращаемое значение:
//  Строка
//
Функция ПредставлениеДействияСтекаНастроек(Форма, ЗаписьСтекаНастроек, ТекущееПоле)
	
	Действие = ЗаписьСтекаНастроек.Действие;
	
	Если ТекущееПоле = Неопределено Тогда 
		
		СвойстваЗаголовка = СвойстваЗаголовкаОтчета(Форма);
		ТекущееПоле = ?(СвойстваЗаголовка = Неопределено, Неопределено, СвойстваЗаголовка.Текст);
		
	КонецЕсли;
	
	НастройкиОтчета = Форма.НастройкиОтчета; // см. ВариантыОтчетов.НастройкиФормыОтчета
	ПредставлениеСобытия = СтрЗаменить(НастройкиОтчета.СобытияНастроек[Действие], "...", "");
	
	Если ЗначениеЗаполнено(ТекущееПоле) Тогда 
		
		Возврат СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			"%1 '%2'", ПредставлениеСобытия, ТекущееПоле);
		
	КонецЕсли;
	
	Возврат ПредставлениеСобытия;

КонецФункции

Функция СтекНастроекОтчета(Форма)
	
	Если ЭтоФормаОтчета(Форма) Тогда 
		Возврат Форма.СтекНастроек;
	КонецЕсли;
	
	ВладелецФормы = Форма.ВладелецФормы;
	
	Если ВладелецФормы <> Неопределено
		И ЭтоФормаОтчета(ВладелецФормы) Тогда 
		
		Возврат ВладелецФормы.СтекНастроек;
	КонецЕсли;
	
	Возврат Неопределено;
	
КонецФункции

Процедура УдалитьРазрывСтекаНастроек(СтекНастроек)
	
	КоличествоНастроекСтека = СтекНастроек.Количество();
	
	Если КоличествоНастроекСтека = 0 Тогда 
		Возврат;
	КонецЕсли;
	
	СтекНастроек.Сортировать("Порядок Возр");
	
	ТекущиеНастройкиСтека = СтекНастроек.НайтиСтроки(Новый Структура("Пометка", Истина));
	
	Если ТекущиеНастройкиСтека.Количество() = 0 Тогда 
		Возврат;
	КонецЕсли;
	
	ИндексТекущихНастроек = СтекНастроек.Индекс(ТекущиеНастройкиСтека[0]);
	ГраницаСтекаНастроек = КоличествоНастроекСтека - 1;
	
	Если ИндексТекущихНастроек = ГраницаСтекаНастроек Тогда 
		Возврат;
	КонецЕсли;
	
	Пока ГраницаСтекаНастроек > ИндексТекущихНастроек Цикл 
		
		СтекНастроек.Удалить(ГраницаСтекаНастроек);
		ГраницаСтекаНастроек = ГраницаСтекаНастроек - 1;
		
	КонецЦикла;
	
