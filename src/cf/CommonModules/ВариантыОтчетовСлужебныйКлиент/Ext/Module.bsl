		Если ТипЗнч(Формула) <> Тип("ПользовательскоеПолеВыражениеКомпоновкиДанных") Тогда
			Продолжить;
		КонецЕсли;

		Если СокрЛП(Выражение) = Формула.ПолучитьВыражениеДетальныхЗаписей() Тогда 
			Возврат Формула;
		КонецЕсли;
		
	КонецЦикла;
	
