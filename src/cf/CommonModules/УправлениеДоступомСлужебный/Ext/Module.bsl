					Контекст.ОшибкаПриВызовеИсключения.Текст = ТекстОшибки;
				КонецЕсли;
				ВызватьИсключение ТекстОшибки;
			Иначе
				Возврат;
			КонецЕсли;
		КонецЕсли;
		
		Если ПолеВладельца.Имя = "" Тогда
			ПолеВладельца.Имя = ОграничениеИзменения.Поле.Имя;
			
