		Контекст.ЧастиЗапросаЗначенийИзКлючейДляРасчетаПрав.Добавить(ТекстЗапроса);
	КонецЕсли;
	
	Если НомерШапки = 0 Тогда
		ТекстЗапроса =
		"ВЫБРАТЬ
		|	ПорцияКлючей.Ссылка КАК Ссылка" + ТекстСОтступом(СоединенияИПоля.Реквизиты, "	") + "
