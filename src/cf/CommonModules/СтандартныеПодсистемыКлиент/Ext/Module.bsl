// Движок сценария по выводу результата выполнения.

// Только для внутреннего использования.
Процедура ВыполнитьСценарий(Сценарий)
	Пока НайтиСледующийШаг(Сценарий) Цикл
		Если Не ВыполнитьШаг(Сценарий) Тогда
			Возврат; // Сценарий остановлен.
		КонецЕсли;
	КонецЦикла;
	ВернутьРезультат(Сценарий);
КонецПроцедуры

// Только для внутреннего использования.
Функция НайтиСледующийШаг(Сценарий)
	Если Сценарий.НомерШага = Сценарий.КоличествоШагов Тогда
		Возврат Ложь;
	КонецЕсли;
	ЭлементСписка = Сценарий.Шаги[Сценарий.НомерШага]; // Индекс следующего шага это номер текущего.
	Сценарий.НомерШага      = Сценарий.НомерШага + 1;
	Сценарий.ТекущийШаг     = ЭлементСписка.Представление;
	Сценарий.Параметры      = ЭлементСписка.Значение;
	Сценарий.МестоОстановки = Неопределено;
	Возврат Истина;
КонецФункции

// Только для внутреннего использования.
Функция Обработчик(Сценарий, КоличествоПараметров = 2)
	Если КоличествоПараметров = 1 Тогда
		Возврат Новый ОписаниеОповещения("ВозобновитьСценарийПослеЗакрытияПростогоДиалога", ЭтотОбъект, Сценарий);
	ИначеЕсли КоличествоПараметров = 2 Тогда
		Возврат Новый ОписаниеОповещения("ВозобновитьСценарий", ЭтотОбъект, Сценарий);
	Иначе
		ВызватьИсключение НСтр("ru = 'Обработчик оповещения для более чем 2 параметров не поддерживается'");
	КонецЕсли;
КонецФункции

// Только для внутреннего использования.
Процедура ВозобновитьСценарий(ВыборПользователя, Сценарий) Экспорт
	Сценарий.Результат = ВыборПользователя;
	Если Не ВыполнитьШаг(Сценарий) Тогда // Продолжить шаг сценария.
		Возврат; // Сценарий остановлен.
	КонецЕсли;
	ВыполнитьСценарий(Сценарий);
КонецПроцедуры

// Только для внутреннего использования.
Процедура ВозобновитьСценарийПослеЗакрытияПростогоДиалога(Сценарий) Экспорт
	Сценарий.Результат = Неопределено;
	Если Не ВыполнитьШаг(Сценарий) Тогда // Продолжить шаг сценария.
		Возврат; // Сценарий остановлен.
	КонецЕсли;
	ВыполнитьСценарий(Сценарий);
КонецПроцедуры

// Только для внутреннего использования.
Процедура ВернутьРезультат(Сценарий)
	ОбработчикЗавершения = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(Сценарий, "ОбработчикЗавершения");
	Если ТипЗнч(ОбработчикЗавершения) = Тип("ОписаниеОповещения") Тогда
		ВыполнитьОбработкуОповещения(ОбработчикЗавершения, Сценарий.Результат);
	КонецЕсли;
КонецПроцедуры

////////////////////////////////////////////////////////////////////////////////
// Шаги сценария по выводу результата выполнения.

// Только для внутреннего использования.
Функция ВыполнитьШаг(Сценарий)
	
	Если Сценарий.ТекущийШаг = "ВывестиОповещение" Тогда
		Возврат ВывестиОповещение(Сценарий);
	
	ИначеЕсли Сценарий.ТекущийШаг = "ВывестиСообщение" Тогда
		Возврат ВывестиСообщение(Сценарий);
	
	ИначеЕсли Сценарий.ТекущийШаг = "ВывестиПредупреждение" Тогда
	
		Если Сценарий.МестоОстановки = Неопределено Тогда
			Сценарий.МестоОстановки = "ЗаданВопрос";
			ВывестиПредупреждение(
				Сценарий.Форма,
				Сценарий.Параметры,
				Обработчик(Сценарий));
			Возврат Ложь; // Приостановить сценарий
		Иначе
			Возврат Истина; // Продолжить сценарий.
		КонецЕсли;
	
	ИначеЕсли Сценарий.ТекущийШаг = "ОповеститьОткрытыеФормы" Тогда
		Возврат ОповеститьОткрытыеФормы(Сценарий);
	
	ИначеЕсли Сценарий.ТекущийШаг = "ОповеститьДинамическиеСписки" Тогда
		Возврат ОповеститьДинамическиеСписки(Сценарий);
	
	ИначеЕсли Сценарий.ТекущийШаг = "РазвернутьУзлыДерева" Тогда
		РазвернутьУзлыДерева(Сценарий.Форма, Сценарий.Параметры);
		Возврат Истина; // Продолжить сценарий.
	
	ИначеЕсли Сценарий.ТекущийШаг = "ВывестиФорму" Тогда
		Возврат ВывестиФорму(Сценарий);
	
	КонецЕсли;
	
КонецФункции

// Только для внутреннего использования.
Функция ВывестиОповещение(Сценарий)
	ВыводОповещения = Сценарий.Параметры;
	ПоказатьОповещениеПользователя(
		ВыводОповещения.Заголовок,
		ВыводОповещения.Ссылка,
		ВыводОповещения.Текст,
		ВыводОповещения.Картинка);
	Возврат Истина; // Продолжить сценарий.
КонецФункции

// Только для внутреннего использования.
Функция ВывестиСообщение(Сценарий)
	ВыводСообщения = Сценарий.Параметры;
	Сообщение = Новый СообщениеПользователю;
	Если ТипЗнч(Сценарий.Форма) = Тип("УправляемаяФорма") Тогда
		Сообщение.ИдентификаторНазначения = Сценарий.Форма.УникальныйИдентификатор;
	КонецЕсли;
	Сообщение.Текст = ВыводСообщения.Текст;
	Сообщение.Поле  = ВыводСообщения.ПутьКРеквизитуФормы;
	Сообщение.Сообщить();
	Возврат Истина; // Продолжить сценарий.
КонецФункции

// Только для внутреннего использования.
Функция ОповеститьОткрытыеФормы(Сценарий)
	ОповещениеФорм = Сценарий.Параметры;
	Оповестить(ОповещениеФорм.ИмяСобытия, ОповещениеФорм.Параметр, ОповещениеФорм.Источник);
