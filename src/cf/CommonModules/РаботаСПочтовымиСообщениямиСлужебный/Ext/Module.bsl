Функция КодСимволаВПорядковыйНомер(Знач Код)
	Код0 = КодСимвола("0");
	КодA = КодСимвола("a");
	
	Если Код - Код0 < 10 Тогда
		Возврат Код - Код0 + 26;
	ИначеЕсли Код - КодA < 26 Тогда
		Возврат Код - КодA;
	Иначе
		ВызватьИсключение НСтр("ru='Плохие данные на вход'");
	КонецЕсли;
