		Выборка = Результат.Выбрать(); // ВыборкаИзРезультатаЗапроса
		Выборка.Следующий();
		
		ЗаполнитьЗначенияСвойств(ВариантОтчета, Выборка);
		
	КонецЦикла;
	
	Возврат ВариантОтчета;
	
