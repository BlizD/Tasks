			Результат = СервисКриптографииDSSКлиентСервер.ОбъектПароля("", 2);
		Иначе	
			Результат = ТекущееЗначение;
		КонецЕсли;	
		
	ИначеЕсли ЗначениеЗаполнено(ТекущееЗначение) Тогда
		Результат = СервисКриптографииDSSКлиентСервер.ОбъектПароля("", 2);
		
	Иначе	
		Результат = СервисКриптографииDSSКлиентСервер.ОбъектПароля("", 3);
		
	КонецЕсли;
	
	Возврат Результат;
	
