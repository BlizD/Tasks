				ЗначениеКлюча = НРег(Сред(ДанныеСтраницы, ВторойСимвол + 1, ПервыйСимвол - ВторойСимвол - 1));
			КонецЕсли;
			Результат.Вставить(ИмяКлюча, ЗначениеКлюча);
		Иначе
