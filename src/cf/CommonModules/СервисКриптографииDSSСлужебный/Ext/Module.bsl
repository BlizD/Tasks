				НоваяСтрока.Вставить("АдресСервиса", АдресСервиса);
				Результат.СервисыЦИ.Добавить(НоваяСтрока);
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЦикла;	
	
	Возврат Результат;
	
