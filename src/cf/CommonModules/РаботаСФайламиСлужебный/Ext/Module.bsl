	КонецЕсли;
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ЭтоНеГруппа", 
		?(МетаданныеОбъектаФайлов.Иерархический, "НЕ Файлы.ЭтоГруппа", "ИСТИНА")); // @query-part
	
	Возврат ТекстЗапроса;
	
