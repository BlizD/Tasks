	ОписаниеТипов = ТаблицаЗначение.ТипЗначения;
	
	ПараметрыЭлемента = Новый Структура;
	ПараметрыЭлемента.Вставить("ИдентификаторЭлемента",  ИдентификаторЭлемента);
