	Запрос.Текст = ТекстЗапроса;
	
	Кэш.Вставить("ПустаяСсылка", Справочники.ВариантыОтчетов.ПустаяСсылка());
	Кэш.Вставить("ПоискРодителей", Новый Соответствие);
